<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include user preferences and settings -->
        <include domain="sharedpref" path="." />
        <!-- Include all files and databases, then exclude sensitive ones -->
        <include domain="database" path="." />
        <include domain="file" path="." />
        <!-- Exclude sensitive data like cookies and cache -->
        <exclude domain="database" path="webview.db" />
        <exclude domain="database" path="webview_data.db" />
        <exclude domain="file" path="cache/" />
        <exclude domain="file" path="code_cache/" />
        <exclude domain="file" path="no_backup/" />
    </cloud-backup>
    <device-transfer>
        <!-- Include user preferences for device transfer -->
        <include domain="sharedpref" path="." />
        <!-- Include all files, then exclude temporary ones -->
        <include domain="file" path="." />
        <!-- Exclude temporary files and cache -->
        <exclude domain="file" path="cache/" />
        <exclude domain="file" path="code_cache/" />
        <exclude domain="file" path="no_backup/" />
    </device-transfer>
</data-extraction-rules>